<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">



    <data>


        <variable
            name="view"
            type="mychevroletconnect.com.chevroletapp.ui.garage.GarageListView" />

        <variable
            name="garage"
            type="mychevroletconnect.com.chevroletapp.model.data.Garage" />

        <variable
            name="contentVisible"
            type="boolean" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minWidth="400dp"
        android:background="@color/dialog"
        android:padding="16dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:padding="5dp"
            android:gravity="center_vertical"
            android:background="@color/colorPrimary"
            android:orientation="horizontal">


            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:scaleType="centerCrop"
                android:tint="@color/white"
                android:src="@drawable/ic_garage"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="Add Car "
                android:layout_marginLeft="5dp"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                />

        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

        <EditText
            android:id="@+id/et_car_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:digits="abcdefghijklmnopqrstuvwxyz ABCDEFGHIJKLMNOPQRSTUVWXYZ,.-_@#$%^*()/\!?1234567890"
            android:background="@drawable/edittext_selector"
            android:hint="Car Nickname"
            android:layout_marginTop="10dp"
            android:maxLength="16"
            android:padding="12dp"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"
            android:textColorHint="@android:color/darker_gray" />


        <EditText
            android:id="@+id/et_car_model"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:digits="abcdefghijklmnopqrstuvwxyz ABCDEFGHIJKLMNOPQRSTUVWXYZ,.-_@#$%^*()/\!?1234567890"
            android:background="@drawable/edittext_selector"
            android:hint="Model"
            android:maxLength="60"
            android:layout_marginTop="6dp"
            android:padding="12dp"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"
            android:textColorHint="@android:color/darker_gray" />

        <EditText
            android:id="@+id/et_car_year_model"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_selector"
            android:hint="Year Model"
            android:inputType="number"
            android:maxLength="4"
            android:padding="12dp"
            android:layout_marginTop="6dp"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"
            android:textColorHint="@android:color/darker_gray" />

        <EditText
            android:id="@+id/et_car_plate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_selector"
            android:hint="Plate Number"
            android:digits="abcdefghijklmnopqrstuvwxyz ABCDEFGHIJKLMNOPQRSTUVWXYZ,.-_@#$%^*()/\!?1234567890"
            android:maxLength="16"
            android:padding="12dp"
            android:layout_marginTop="6dp"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"
            android:textColorHint="@android:color/darker_gray" />

        <EditText
            android:id="@+id/et_car_chassis"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_selector"
            android:hint="Chassis Number(Optional)"
            android:maxLength="17"
            android:lines="2"
            android:layout_marginTop="6dp"
            android:digits="abcdefghijklmnopqrstuvwxyz ABCDEFGHIJKLMNOPQRSTUVWXYZ,.-_@#$%^*()/\!?1234567890"
            android:padding="12dp"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"
            android:textColorHint="@android:color/darker_gray" />


        <FrameLayout
            android:id="@+id/layout_car_dop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:background="@drawable/bg_spinner"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground"
            android:gravity="center_vertical"
            android:onClick="@{() -> view.onBirthdayClicked()}"
            android:padding="12dp">

            <TextView
                android:id="@+id/et_car_dop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:hint="Date of Purchased"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColorHint="@android:color/darker_gray" />



        </FrameLayout>



        <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minWidth="300dp"
                    android:padding="16dp"
                    android:gravity="right"

                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/cancel"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:background="@drawable/rounded_button_solid"
                        android:clickable="true"
                        android:padding="8dp"
                        android:paddingEnd="20dp"
                        android:paddingStart="20dp"
                        android:text="Cancel"
                        android:textAllCaps="true"
                        android:gravity="center|right"
                        android:paddingRight="25dp"
                        android:textColor="@color/white"
                        android:textSize="14sp" />



                    <TextView
                        android:id="@+id/send"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:background="@drawable/rounded_button_solid"
                        android:clickable="true"
                        android:padding="8dp"
                        android:paddingEnd="20dp"
                        android:paddingStart="20dp"
                        android:text="Save"
                        android:layout_marginRight="@dimen/activity_half_margin"
                        android:textAllCaps="true"
                        android:gravity="center|right"
                        android:paddingRight="25dp"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:layout_below="@+id/LinearMoTo" />

                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</layout>