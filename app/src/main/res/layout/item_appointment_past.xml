<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    >

    <data>

        <variable
            name="pastappointment"             
            type="mychevroletconnect.com.chevroletapp.model.data.Appointment" />

        <variable
            name="view"
            type="mychevroletconnect.com.chevroletapp.ui.main.pastAppointment.PastAppointmentView" />


    </data>

    <android.support.design.widget.CoordinatorLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:id="@+id/appointCardPast"
        android:layout_height="wrap_content">

        <android.support.v7.widget.CardView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/pastappointlist"
            android:onClick="@{() -> view.showAppointmentDetails2(pastappointment)}"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            app:cardCornerRadius="3dp">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="1"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight=".3"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="5dp"
                    android:id="@+id/appointmentStatusColor"
                    android:background="@color/colorPrimaryDark"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="8:30am"
                        android:gravity="center"
                        android:id="@+id/appointListTime"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                        android:textColor="@color/white" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="May 29"
                        android:id="@+id/appointListDate"
                        android:gravity="center"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Title"
                        android:textColor="@color/white" />


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="2018"
                        android:gravity="center"
                        android:id="@+id/appointListYear"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                        android:textColor="@color/white" />




                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight=".7"
                    android:orientation="vertical"
                    android:padding="3dp"
                    android:background="@color/white"
                    android:layout_height="match_parent">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@{pastappointment.appointdealerName}"
                        android:maxLines="2"
                        android:ellipsize="end"
                        android:layout_marginLeft="3dp"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Title"
                        android:textColor="@color/black" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@{pastappointment.appointdealerLocation}"
                        android:drawableLeft="@drawable/ic_location_on"
                        android:drawablePadding="1dp"
                        android:maxLines="2"
                        android:ellipsize="end"
                        android:id="@+id/appointListDealerAdd"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"
                        android:textColor="@color/black" />


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text='@{pastappointment.appointgaragerName+" ("+pastappointment.appointgaragePlate+")"}'
                        android:drawableLeft="@drawable/ic_car_small_tint"
                        android:drawablePadding="3dp"
                        android:maxLines="2"
                        android:ellipsize="end"
                        android:id="@+id/appointListGarage"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"
                        android:textColor="@color/black" />

                </LinearLayout>


            </LinearLayout>

        </android.support.v7.widget.CardView>



    </android.support.design.widget.CoordinatorLayout>

</layout>
