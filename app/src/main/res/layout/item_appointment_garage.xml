<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
       <variable
            name="garage"
            type="mychevroletconnect.com.chevroletapp.model.data.Garage" />

        <variable
            name="view"
            type="mychevroletconnect.com.chevroletapp.ui.main.currentAppointment.AppointmentView" />


    </data>

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"

       >

    <android.support.v7.widget.CardView
        app:cardCornerRadius="10dp"
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:id="@+id/appointmentGarage"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="3dp"
            android:layout_height="match_parent">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{garage.garagePlate}"
                android:gravity="center"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Title"
                android:textColor="@color/colorAccentDark" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{garage.garageName}"
                android:gravity="center"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:textColor="@color/colorAccentDark" />

        </LinearLayout>

    </android.support.v7.widget.CardView>

    </android.support.v7.widget.CardView>

</layout>
